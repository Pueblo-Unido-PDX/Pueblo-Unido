<script type="text/javascript">
  if (document.querySelector("#glider-single") !== null) {
    new Glider(document.querySelector(".glider"), {
      slidesToShow: 1,
      dots: "#dots",
      draggable: true,
      arrows: {
        prev: ".glider-prev",
        next: ".glider-next",
      },
      // how much to scroll with each mouse delta
      dragVelocity: 2,
    });
  }
</script>
